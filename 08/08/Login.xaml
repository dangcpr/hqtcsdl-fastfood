<Window x:Class="_08.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_08"
        mc:Ignorable="d"
        Title="Login" FontSize="25" Height="600" Width="500" Background="#33FF99">
    <Border Margin="20" Background="WhiteSmoke" CornerRadius="30">
        <StackPanel Margin="15" Background="WhiteSmoke">
            <TextBlock Text="LOGIN" FontSize="40" FontWeight="DemiBold" HorizontalAlignment="Center" Margin="10"></TextBlock>
            <Separator Margin="20 0"></Separator>
            <Label Margin="30 10" Content="Username"></Label>
            <TextBox x:Name="username_account" Margin="30 10" Background="#CCCCCC" Foreground="#222"></TextBox>
            <Label Margin="30 10" Content="Password"></Label>
            <PasswordBox x:Name="password_account" Margin="30 10" Background="#CCCCCC" Foreground="#222"/>
            <Button Content="SUBMIT" FontSize="30" Margin="137,35" Width="150" Height="50" Click="SubmitLogin"/>
            <Button Content="SIGN UP" FontSize="30" Width="150" Height="50" Click="SubmitSignUp"/>
        </StackPanel>
    </Border>
</Window>
